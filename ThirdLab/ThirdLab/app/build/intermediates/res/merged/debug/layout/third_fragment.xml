<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="30dp">

    <TextView
        android:id="@+id/thirdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/third_label"
        android:textColor="@color/colorPrimaryDark"/>

    <RadioGroup
        android:id="@+id/actionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radioButtonSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sum"/>

        <RadioButton
            android:id="@+id/radioButtonDifference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/difference"/>

        <RadioButton
            android:id="@+id/radioButtonMultiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/multiplication"/>

        <RadioButton
            android:id="@+id/radioButtonDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/division"/>

        <RadioButton
            android:id="@+id/radioButtonPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/power"/>
    </RadioGroup>

    <Button
        android:id="@+id/thirdConfirmButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/confirm"/>
</LinearLayout>